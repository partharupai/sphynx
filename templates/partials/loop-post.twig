<article class="{{ post.class }}">

  <h2>
    <a href="{{ post.link }}">
      {{- post.title -}}
    </a>
  </h2>

  {% include 'partials/post-meta.twig' %}

  {% if post.thumbnail %}

    <a href="{{ post.link }}">
      <img class="featured-image" src="{{ post.thumbnail.src('thumbnail') }}" alt="{{ post.thumbnail.title }}">
    </a>

  {% endif %}

  {{ post.get_preview(100, false, __('Read more', 'tp'))|wpautop }}

</article>
