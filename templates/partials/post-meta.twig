<p class="meta">
	{{__('Posted on', 'tp')}} <time datetime="{{post.post_date|date('Y-m-d')}}">{{post.date}}</time>
	{{__('by', 'tp')}} <a href="{{post.author.path}}">{{post.author.name}}</a>
	{% if post.terms('category') %}
		{{__('in the category', 'tp')}} 
		{% for term in post.terms('category') %}
	  		<a href="{{ term.link }}">{{ term.name }}</a>{% if loop.last == false %},{% endif %}     
		{% endfor %}
	{% endif %}
</p>
