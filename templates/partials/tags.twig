{% if post.terms('tags') %}
  {% spaceless %}
    <div class="tags">
      <span>
        {{ __('Tags', 'tp') }}
      </span>

      {% for tag in post.terms('tags') %}
        <a class="tag" href="{{ tag.link }}">
          {{- tag.name -}}
        </a>
      {% endfor %}
    </div>
  {% endspaceless %}
{% endif %}
