{% if post.terms('tags') %}
  {% spaceless %}

    <p class="tags">

      <span>
        {{ __('Tags', 'tp') }}
      </span>

      {% for term in post.terms('tags') %}

        <a class="tag" href="{{ term.link }}">
          {{- term.name -}}
        </a>

      {% endfor %}

    </p>

  {% endspaceless %}
{% endif %}
