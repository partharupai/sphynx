{% if post.terms('tags') %}
  {% spaceless %}
    <p class="tags">
      <span>
        {{ __('Tags', 'tp') }}
      </span>

      {% for tag in post.terms('tags') %}
        <a class="tag" href="{{ tag.link }}">
          {{ tag.name }}
        </a>
      {% endfor %}
    </p>
  {% endspaceless %}
{% endif %}
