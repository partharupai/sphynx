<li class="comment">
  <img class="comment-avatar" src="{{ comment.avatar(60) }}" srcset="{{ comment.avatar(120) }} 2x" alt="{{ comment.author.name }}" />

  <span class="comment-author">
    {{ comment.author.name }}
  </span>

  <span class="comment-date">
    {{ comment.date }}
  </span>

  <div class="comment-content">
    {{ comment.content|wpautop }}
  </div>
</li>
