<!DOCTYPE html>

<html {{ site.language_attributes }}>

	<head>

		<meta charset="{{ site.charset }}" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="alternate" type="application/rss+xml" href="{{ bloginfo('rss2_url') }}" title="{{ site.name }} RSS feed" />
		<link rel="pingback" href="{{ site.pingback_url }}" />
		<link rel="profile" href="http://gmpg.org/xfn/11" />

		{{ wp_head }}

	</head>

	<body class="{{ body_class }}">

		<header class="header">

			<div class="wrapper">

				<div class="mobile-search" data-toggle=".header-search">
					<div class="search-icon"></div>
				</div>

				<div class="mobile-navigation" data-toggle=".main-navigation">
					<div class="navigation-icon">
						<div class="line"></div>
						<div class="line"></div>
						<div class="line"></div>
					</div>
				</div>

				<a class="logo" href="{{ site.url }}">
					{{- site.name -}}
				</a>

			</div>

		</header>

		{% include 'partials/main-navigation.twig' %}
