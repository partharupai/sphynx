<!DOCTYPE html>

<html {{site.language_attributes}}>

	<head>

		<meta charset="{{site.charset}}" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="alternate" type="application/rss+xml" href="{{bloginfo( 'rss2_url' )}}" title="{{site.name}} RSS feed" />
		<link rel="pingback" href="{{site.pingback_url}}" />
		<link rel="profile" href="http://gmpg.org/xfn/11" />
		<link rel="shortcut icon" type="image/png" href="{{theme.uri}}/assets/images/favicon.ico" />

		{{wp_head}}

	</head>
	
	<body class="{{body_class}}">
	
		<header id="header">
		
			<div class="wrapper">

				<div id="mobile-search" data-toggle="#search">
					<div class="glass"></div>
				</div>

				<div id="mobile-navigation" data-toggle="#main-navigation">
					<div class="burger">
						<div class="line"></div>
						<div class="line"></div>
						<div class="line"></div>
					</div>
				</div>
				
				<div id="logo">

					<p id="sitename">
						<a href="{{site.url}}">
							{{site.name}}
						</a>
					</p>

					<p id="description">
						{{site.description}}
					</p>

				</div>

				<div id="search">
					{% include 'partials/searchform.twig' %}
				</div>

			</div>

		</header>

		<nav id="main-navigation">

			<div class="wrapper">

				{{menus.main}}

			</div>

		</nav>
